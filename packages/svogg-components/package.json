{
	"name": "svogg-components",
	"version": "0.5.3",
	"description": "A SvelteKit component library.",
	"author": "MikaelJohnAndersson <mikael.andersson@moggstudio.se>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/MikaelJohnAndersson/svogg-components.git"
	},
	"scripts": {
		"dev": "svelte-package --watch & vite dev",
		"build": "vite build & pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"package:watch": "svelte-kit sync && svelte-package --watch",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles/*.css": "./dist/styles/*.css",
		"./components/*.svelte": "./dist/components/*.svelte"
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/svelte": "^4.0.5",
		"@testing-library/user-event": "^14.5.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"jsdom": "^22.1.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.9",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-htm": "^1.2.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.34.6"
	},
	"type": "module"
}
